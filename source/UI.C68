	gemsstopall();
	gemsstartsong(MUSIC_OPENING);
	do {
		switch (UI_StartScreen()) {
			case 0:	/* Continue/Player Start */
				done = TRUE;
				break;
			case 1:	/* Access Code */
				done = UI_PasswordScreen();
				break;
			case 2:	/* Options */
				UI_OptionScreen();
				break;
