			before = -1;
			do {
				i = (i ? i-1 : 7);
				if (Item_Costs[i] <= Player.Credits)
					if (i < 6) {
						if (!Player.Items[i])
							before = i;
					} else 
						before = i;
			} while (before == -1);
			/* Find the item after the current one that we can afford */
			i = item;
			after = -1;
			do {
				i = (i < 7 ? i+1 : 0);
				if (Item_Costs[i] <= Player.Credits)
					if (i < 6) {
						if (!Player.Items[i])
							after = i;
					} else
						after = i;
			} while (after == -1);
