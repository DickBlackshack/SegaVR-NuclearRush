					if (last_move != JOY_RIGHT) {
						DrawArrow(26,19,FALSE,286,1);
						last_move = JOY_RIGHT;
						item = after;
						gemsstartsong(SFX_BUTTON_HIT);
					}
				} else
					last_move = -1;
		}
	}
	UI_KillSprList();
	SYS_FadeOut(FADETIME);						/* Fade old palette out */
	gemsstopall();
}

