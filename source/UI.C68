				case 2:	/* Buy Items */
					Player.Credits = 2000;
					SYS_FadeOut(FADETIME);
					UI_DroneEnhance();
					goto restart;
					break;
			}
		} else
			last_button = FALSE;
	}
	SYS_FadeOut(FADETIME);						/* Fade old palette out */
	UI_ClearScreen(0xE000);
	return (cur_item);
}

